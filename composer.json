{
    "name": "jparkinson1991/docker-drupal-lemp",
    "description": "Dockered Drupal LEMP Stack",
    "version": "1.0.0",
    "type": "project",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Josh Parkinson",
            "email": "joshparkinson1991@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "path",
            "url": "system/packages/composer/docker-drupal-lemp-patches"
        }
    ],
    "require": {
        "php": "^7.4.0",
        "composer/installers": "^1.9",
        "drupal-composer/drupal-paranoia": "^1.0",
        "drupal/core-composer-scaffold": "^9.0",
        "drupal/core-recommended": "^9.0",
        "jparkinson1991/docker-drupal-lemp-patches": "^0.0.1",
        "vlucas/phpdotenv": "^5.0"
    },
    "require-dev": {
        "drupal/core-dev": "^9.0",
        "roave/security-advisories": "dev-master",
        "zaporylie/composer-drupal-optimizations": "^1.1"
    },
    "autoload": {
        "files": [
            "app/bootstrap.php"
        ]
    },
    "config": {
        "discard-changes": true,
        "optimize-autoloader": true,
        "sort-packages": true,
        "platform": {
            "php": "7.4",
            "ext-gd": "7.4"
        }
    },
    "scripts": {
        "post-drupal-scaffold-cmd": [
            "cd app && patch < ../system/patches/drupal/scaffold/scaffold-autoload.patch",
            "cd app && patch < ../system/patches/drupal/scaffold/scaffold-index.patch",
            "cd app && patch < ../system/patches/drupal/scaffold/scaffold-update.patch"
        ]
    },
    "extra": {
        "drupal-paranoia": {
            "app-dir": "app",
            "web-dir": "public"
        },
        "drupal-scaffold": {
            "allowed-packages": [
                "drupal/core"
            ],
            "locations": {
                "project-root": ".",
                "web-root": "./app"
            },
            "gitignore": false,
            "file-mapping": {
                "[project-root]/.editorconfig": false,
                "[web-root]/.csslintrc": false,
                "[web-root]/.eslintignore": false,
                "[web-root]/.eslintrc.json": false,
                "[web-root]/.ht.router.php": false,
                "[web-root]/.htaccess": false,
                "[web-root]/example.gitignore": false,
                "[web-root]/INSTALL.txt": false,
                "[web-root]/README.txt": false,
                "[web-root]/robots.txt": false,
                "[web-root]/web.config": false,
                "[web-root]/sites/README.txt": false,
                "[web-root]/sites/development.services.yml": false,
                "[web-root]/sites/example.settings.local.php": false,
                "[web-root]/sites/example.sites.php": false,
                "[web-root]/sites/default/default.services.yml": false,
                "[web-root]/sites/default/default.settings.php": false,
                "[web-root]/modules/README.txt": false,
                "[web-root]/profiles/README.txt": false,
                "[web-root]/themes/README.txt": false
            }
        },
        "installer-paths": {
            "app/core": [
                "type:drupal-core"
            ],
            "app/libraries/{$name}": [
                "type:drupal-library"
            ],
            "app/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "app/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "app/themes/contrib/{$name}": [
                "type:drupal-theme"
            ]
        }
    }
}
